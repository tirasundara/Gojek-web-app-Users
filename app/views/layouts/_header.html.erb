  <div class="container">
    <%= link_to "Go-JEK Web App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if logged_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Orders <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "New Order", new_order_path(current_user) %></li>
            <li><%= link_to "Order History", order_history_path(current_user) %></li>
            <li class="divider"></li>
